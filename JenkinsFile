pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
        
        stage('Build') {
            steps {
                echo 'Building the tool.'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying the  Tool.'
            }
        }
        stage('Test'){
            steps{
                echo 'Testing the tool.'
            }
        }
    }
}
